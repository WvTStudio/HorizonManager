<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HorizonManagerCompose" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF1976D2</item>
        <item name="colorPrimaryVariant">#FF004BA0</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF2E7D32</item>
        <item name="colorSecondaryVariant">#FF005005</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.HorizonManagerCompose.NoActionBar" parent="Theme.HorizonManagerCompose">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HorizonManagerCompose.SlashScreen" parent="Theme.HorizonManagerCompose.NoActionBar" >
        <item name="android:windowBackground">@drawable/slash</item>
        <item name="android:statusBarColor" tools:targetApi="l">#00000000</item>
        <item name="android:navigationBarColor" tools:targetApi="l">#00000000</item>
    </style>
</resources>